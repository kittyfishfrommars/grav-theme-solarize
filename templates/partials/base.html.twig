	Released for free under the Creative Commons Attribution 3.0 license (templated.co/license)
-->
<html lang="{{ grav.language.getActive ?: grav.config.site.default_lang }}">
<head>
{% block head %}
	<title>{% if header.title %}{{ header.title|e('html') }} - {% endif %}{{ site.title|default('Solarize by TEMPLATED')|e('html') }}</title>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />

	{% include 'partials/metadata.html.twig' %}

	<link rel="icon" type="image/png" href="{{ url('theme://images/favicon.png') }}" />
	<link rel="canonical" href="{{ page.url(true, true) }}" />

	{% block javascripts %}

		{% block jquery %}
			{{ include('partials/asset-jquery.html.twig') }}
		{% endblock %}

		{% do assets.addJs('theme://vendor/js/jquery.dropotron.min.js') %}
		{% do assets.addJs('theme://vendor/js/skel.min.js') %}
		{% do assets.addJs('theme://vendor/js/skel-layers.min.js') %}
		{% do assets.addJs('theme://js/init.js', {'data-theme-root': theme_url} ) %}
	{% endblock %}

	{% block stylesheets %}
		{% if browser.getBrowser == 'msie' and browser.getVersion <= 8 %}
			{# do assets.addJs('theme://css/ie/html5shiv.js', {'group', 'shiv'}) #}
			{% do assets.addJs('theme://css/ie/html5shiv.js') %}
		{% endif %}

		{% do assets.addCss('theme://css/skel.css', {'group': 'noscript'}) %}
		{% do assets.addCss('theme://css/style.css', {'group': 'noscript'}) %}
		{% if browser.getBrowser == 'msie' and browser.getVersion <= 8 %}
			{# do assets.addCss('theme://css/ie/v8.css', {'group', 'ie'}) #}
			{% do assets.addCss('theme://css/ie/v8.css') %}
		{% endif %}
		{% do assets.addCss('theme://css/custom.css') %}
	{% endblock %}

	{% block assets deferred %}
		{{ assets.js()|raw }}
		{{ assets.css()|raw }}
		<noscript>
			{{ assets.css('noscript')|raw }}
		</noscript>
	{% endblock assets %}

{% endblock head %}
</head>

<body class="{{ body_classes }}">

	{% block header %}

		<!-- Header Wrapper -->
			<div class="wrapper style1">

			<!-- Header -->
				<div id="header">
					<div class="container">

						<!-- Logo -->
							<h1><a href="{{ home_url }}" id="logo">{{ site.title }}</a></h1>

						<!-- Nav -->
							<nav id="nav">
								{% include 'partials/navigation.html.twig' %}
							</nav>

					</div>
				</div>

				{% block banner %}{% endblock banner %}

			</div>

	{% endblock header %}

	{% block body %}
		{% block content %}
			{{ page.content|raw }}
		{% endblock content %}
	{% endblock body %}

	{% block footer %}
		{% include 'partials/footer.html.twig' %}
	{% endblock footer %}

	{% block bottom deferred %}
		{{ assets.js('bottom')|raw }}
	{% endblock bottom %}

</body>
