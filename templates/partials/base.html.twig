{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
{{ dump("#{grav.theme.getBlueprint.name} #{grav.theme.getBlueprint.version}") }}
{% set body_classes = header.body_classes %}
<!DOCTYPE HTML>
<!--
